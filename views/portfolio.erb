<div class="row carousel-area">
	<div class="col-md-10 col-md-offset-1 col-xs-12">
		<div id="client-carousel" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<% @clients.length.times do |i| %>
					<li data-target="#client-carousel" data-slide-to="<%=i%>"
						<% if i == 0 %>
							<%= 'class="active"'%>
						<% end %>></li>
				<% end %>
			</ol>
			<div class="carousel-inner" role="listbox">
				<% @clients.each_with_index do |company, i| %>
					<div class="item <% if i == 0 %><%= 'active' %><% end %>">
						<img class="client-ad-image image-responsive center-block" src="<%= company[:ad] %>" alt="">
					</div>			
				<% end %>
			</div>
			<a class="left carousel-control" href="#client-carousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			</a>
			<a class="right carousel-control" href="#client-carousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			</a>
		</div>	<!-- close of carousel div -->
	</div>
</div>
<div>
	<% @clients.each_with_index do |company, i| %>
		<div class="client-profile">
			<div class="row">
				<div>
					<div class="col-md-2 col-md-offset-3 col-sm-2 col-md-offset-5">
						<img class="client-logo" src="<%= company[:logo] %>">
					</div>
					<div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3">
						<h2 class="company-name"><%= company[:name] %></h2>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
					<p class="company-text"><%= company[:text] %></p>
				</div>	
			</div>
		</div>	<!-- end of client-profile -->
	<% end %>
</div>